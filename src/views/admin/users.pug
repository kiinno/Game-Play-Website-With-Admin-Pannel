extends ./layout
include ./components/info-card

block content
  .table-parent
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Image</th>
          <th scope="col">Username</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
          <th scope="col">Admin</th>
          <th scope="col">Deleted</th>
        </tr>
      </thead>
      <tbody>
        each row, index in data
          <tr>
            th(scope="row")=index+1
            td ss
            td=row.username
            td=row.first_name
            td=row.last_name
            td=row.email
            td=row.password
            td
              if (row.is_admin)
                div.answare.bg-primary
                  i.text-white.fa-solid.fa-check
              else
                div.answare.bg-danger
                  <i class="fa-solid fa-xmark"></i>
            td
              if (row.deleted)
                div.answare.bg-primary
                  i.text-white.fa-solid.fa-check
              else
                div.answare.bg-danger
                  <i class="fa-solid fa-xmark"></i>
          </tr>
      </tbody>
    </table>